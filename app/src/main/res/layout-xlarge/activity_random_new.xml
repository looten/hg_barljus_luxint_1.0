<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hg_bar.RandomActivity">



    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:stretchColumns="0,1"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5">

            <Button
                android:text="@string/button_soda_random_text"
                android:id="@+id/button_soda"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_width="0px"
                android:layout_weight="1"/>


            <Button
                android:text="@string/button_juice_random_text"
                android:id="@+id/button_juice"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_width="0px"
                android:layout_weight="1"/>


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:layout_weight="0.5">
            <Button
                android:text="@string/button_milk_random_text"
                android:id="@+id/button_milk"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_width="0px"
                android:layout_weight="1" />

            <Button
                android:text="@string/button_random_random_text"
                android:id="@+id/button_random"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_width="0px"
                android:layout_weight="1"  />

        </TableRow>


    </TableLayout>

</RelativeLayout>
